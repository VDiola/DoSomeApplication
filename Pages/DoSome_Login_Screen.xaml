<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoSomeApplication.Pages.DoSome_Login_Screen"
             Title="DoSome_Login_Screen"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F2EE9D"
             xmlns:local ="clr-namespace:DoSomeApplication.Pages">

    <Grid RowDefinitions="Auto, *, Auto"
          Padding="15, 60"
          RowSpacing="15">


        <!-- Label: Do Some Text-->
        <Label Grid.Row="0"
           CharacterSpacing="10"
           Text="DO SOME"
           TextColor="#0075FF"
           FontSize="20"               
           HorizontalOptions="Center"
           FontAttributes="Bold" 
           FontFamily="Montserrat"
           
      />

        <!-- Label: Are you Bored?-->
        <Label Grid.Row="1"
           Grid.RowSpan="2"
           Text="ARE YOU BORED?"
           TextColor="Black"
        FontSize="35"
       HorizontalOptions="Center"
       FontAttributes="Bold"
       FontFamily="Montserrat"/>

        
        
        <!--Frame: Login-->
        <Frame Grid.Row="1"
               CornerRadius="20"
               BackgroundColor="#FDFDFD"
               WidthRequest="275"
               HeightRequest="400"
               HorizontalOptions="Center"
               VerticalOptions="Center">


                <!--Vertical Stack Layout for the Login-->
            <VerticalStackLayout Spacing="25">

                
                
                <!-- Label: Login Text-->

                <Grid ColumnDefinitions="Auto, *">
                   
                 

                    <!-- "left_arrow_button" Image on the left -->
                    <Image Grid.Column="0"
                       Source="left_arrow_button.svg"
                       WidthRequest="30"
                       HeightRequest="35"/>
                    <!-- "Login" Label centered within the frame -->
                    <Label Grid.Column="1"
                       FontFamily="Montserrat"
                       Text="Login"
                       HorizontalOptions="Center"
                       FontAttributes="Bold"
                       FontSize="20"/>  

                </Grid>

                <!-- Frame: UserName
                    Note: Padding only for Android
                -->
                <Frame BackgroundColor="#D9D9D9"
                       WidthRequest="210"
                       HeightRequest="45"
                       CornerRadius="20"
                       Padding="{x:OnPlatform Android='10,0'}"
                      >
                    <local:BorderlessEntry Placeholder="Username"
                                           HorizontalTextAlignment="Center"
                                           FontAttributes="Bold"
                                           FontFamily="Montserrat"
                                           FontSize="12"/>
                </Frame>


                <!-- Frame: Password
                     Note: Padding only for Android
                 -->
                <Frame BackgroundColor="#D9D9D9"
                       WidthRequest="210"
                       HeightRequest="45"
                       CornerRadius="20"
                       Padding="{x:OnPlatform Android='10,0'}"
        >
                    <local:BorderlessEntry Placeholder="Password"
                                           HorizontalTextAlignment="Center"
                                           FontAttributes="Bold"
                                           FontFamily="Montserrat"
                                           FontSize="12"/>
                </Frame>

                <Label
                    Text="or"
                    
                    HorizontalOptions="Center"
                    
                    FontAttributes="Bold"
                    FontFamily="Montserrat"
                    FontSize="15"
                    />

                <!-- Stack Layout: Login Option Images-->
                <StackLayout
                    Orientation="Horizontal"
                    HorizontalOptions="CenterAndExpand"
                    Spacing="15">
                    
                    <Image
                        Source="fb_img.svg"
                        />
                    <Image
                        Source="google_img.svg"
                        />
                </StackLayout>
            </VerticalStackLayout>

           
        </Frame>


    </Grid>
</ContentPage>